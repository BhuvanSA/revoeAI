{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "ES2020",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noImplicitAny": false, // Added to allow implicit any types
        "noUnusedLocals": false, // Added to ignore unused variables
        "noUnusedParameters": false, // Added to ignore unused parameters
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
