{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node"],
        "lib": ["ES2020"]
    },
    "include": [
        "**/*.ts",
        "src/**/*.ts",
        "prisma/**/*.ts",
        "lib/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
